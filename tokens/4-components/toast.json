{
  "toast": {
    "base": {
      "typography": {
        "$type": "typography",
        "$value": "{semantic.typography.body-s}"
      },
      "border-radius": {
        "$type": "borderRadius",
        "$value": "{semantic.border-radius.lg}"
      },
      "padding-block": {
        "$type": "spacing",
        "$value": "{semantic.spacing.sm}"
      },
      "padding-inline": {
        "$type": "spacing",
        "$value": "{semantic.spacing.md}"
      }
    },
    "variants": {
      "variant": {
        "error": {
          "background-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.interactive.danger.default.background}"
            }
          },
          "foreground-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.foreground.on-danger}"
            }
          }
        },
        "default": {
          "border-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.border.default}"
            }
          },
          "background-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.background.elevated}"
            }
          },
          "foreground-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.foreground.default}"
            }
          }
        },
        "success": {
          "background-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.interactive.success.default.background}"
            }
          },
          "foreground-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.foreground.on-success}"
            }
          }
        },
        "warning": {
          "background-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.interactive.warning.default.background}"
            }
          },
          "foreground-color": {
            "default": {
              "$type": "color",
              "$value": "{semantic.foreground.on-warning}"
            }
          }
        }
      }
    },
    "defaultVariants": {
      "variant": {
        "$type": "other",
        "$value": "default"
      }
    }
  }
}