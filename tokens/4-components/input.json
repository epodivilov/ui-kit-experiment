{
  "input": {
    "global": {
      "border-radius": { "value": "{radius.md}", "type": "borderRadius" },
      "border-width": { "value": "{stroke.thin}", "type": "borderWidth" },
      "padding-inline": { "value": "{spacing.md}", "type": "spacing" },
      "padding-block": { "value": "{spacing.sm}", "type": "spacing" },
      "typography": { "value": "{typography.body-m}", "type": "typography" },
      "min-height": { "value": "{sizing.lg}", "type": "sizing" }
    },
    "default": {
      "background-color": {
        "default": { "value": "{background.surface}", "type": "color" },
        "disabled": { "value": "{background.disabled}", "type": "color" }
      },
      "foreground-color": {
        "default": { "value": "{foreground.default}", "type": "color" },
        "placeholder": { "value": "{foreground.subtle}", "type": "color" },
        "disabled": { "value": "{foreground.disabled}", "type": "color" }
      },
      "border-color": {
        "default": { "value": "{border.default}", "type": "color" },
        "hover": { "value": "{border.hover}", "type": "color" },
        "focus": { "value": "{border.focus}", "type": "color" },
        "disabled": { "value": "{border.disabled}", "type": "color" }
      }
    },
    "error": {
      "border-color": {
        "default": { "value": "{interactive.danger.default.background}", "type": "color" },
        "hover": { "value": "{interactive.danger.hover.background}", "type": "color" },
        "focus": { "value": "{interactive.danger.default.background}", "type": "color" }
      }
    }
  }
}
