{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override settings for library build
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",

    // Disable incremental for clean builds
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null,

    // Strict library settings
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "noImplicitReturns": true,

    // Emit clean declarations
    "stripInternal": true,
    "removeComments": true,
    "preserveConstEnums": true,

    // Module settings for library
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // Type imports optimization for library
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "verbatimModuleSyntax": false
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "src/**/*.stories.*",
    "src/**/*.story.*",
    "src/**/*.test.*",
    "src/**/*.test.ts*",
    "src/**/*.spec.*",
    "src/**/*.spec.ts*",
    "src/test/**/*",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/App.tsx",
    "src/main.tsx",
    "src/assets/**/*",
    "src/stories/**/*",
    "**/*.d.ts",
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}