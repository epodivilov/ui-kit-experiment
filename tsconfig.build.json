{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.stories.*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/test/**/*",
    "src/App.tsx",
    "src/main.tsx",
    "src/assets/**/*",
    "src/stories/**/*",
    "**/*.d.ts"
  ]
}