{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Development-specific overrides
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.dev.tsbuildinfo",

    // Vite-compatible settings
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    // Less strict for development
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Development types
    "types": ["vite/client", "node", "@testing-library/jest-dom"]
  },

  "include": [
    "src/**/*",
    "src/**/*.stories.*",
    "src/**/*.test.*",
    ".storybook/**/*",
    "vite.config.ts",
    "vitest.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}